@model WebsiteTruyen.Model.NguoiDung
@{
    ViewBag.Title = "Register";
}

<h2>Register</h2>
<form action="/NguoiDung/Register" method="post">
    <div class="form-group">
        <label>Mail</label>
        <input class="form-control" name="MailNguoiDung" type="email" />
        @Html.ValidationMessageFor(m => m.MailNguoiDung, "", new { @class = "text-danger" })
    </div>
    <div class="form-group">
        <label>Username</label>
        <input class="form-control" name="TenNguoiDung" type="text" />
        @Html.ValidationMessageFor(m => m.TenNguoiDung, "", new { @class = "text-danger" })
    </div>
    <div class="form-group">
        <label>Password</label>
        <input class="form-control" name="MatKhauNguoiDung" type="password" />
        @Html.ValidationMessageFor(m => m.MatKhauNguoiDung, "", new { @class = "text-danger" })
    </div>
    @Html.ValidationSummary(true, "FailLogin", new { @class = "text-danger" })
    <input type="submit" value="Register" />
</form>
